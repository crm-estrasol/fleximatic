<?xml version="1.0"?>
<odoo>
        <!-- Merge Opportunities  -->
        <record id="fleximatic_multi_confirm_sale_form" model="ir.ui.view">
            <field name="name">fleximatic.multi.confirm.sale.form</field>
            <field name="model">fleximatic.multi.confirm.sale</field>
            <field name="arch" type="xml">
                <form string="Multi confirm sales">
            
                  
                    <group string="Salected orders">
                       
                        <field name="sales_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="state"/>
                                
                            </tree>
                        </field>
                    </group>
               
                      <footer>
                        <button name="action_confirm" string="Confirm all" type="object" class="btn-primary"/>
                        <button name="cancel" string="Cancel" type="object" class="btn-primary"/>
                    </footer>
                
                </form>
            </field>
        </record>

        <act_window
            id="action_merge_opportunities"
            name="Confirm multi sales"
            res_model="fleximatic.multi.confirm.sale"
            binding_model="sale.order"
            binding_views="list"
            view_mode="form"
            target="new"
            />

</odoo>
