<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_products_wizard" model="ir.ui.view">
            <field name="name">sale.promotional.wizard.form</field>
            <field name="model">product.promotional</field>
            <field name="arch" type="xml">
                <form string="Promotional Products" context="{'default_promotional_id':active_id}">
                    <field name="promotional_line">
                        <tree editable="bottom">
                            <field name="product_template_id"/>
                            <field name="qty"/>
                            <field name="price_points"/>
                            <field name="uom_id"/>
                            <field name="total"/>
                            <field name="promotional_id"/>
                        </tree>
                    </field>
                    <group>
                        <group>
                            <field name="points"/>
                        </group>
                        <group>
                            <field name="points_to_sale"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>